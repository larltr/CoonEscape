<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/rootView"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.GameFragment">

    <ImageView
        android:id="@+id/iv_tree1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:elevation="1dp"
        android:src="@drawable/image_baulk" />

    <ImageView
        android:id="@+id/iv_raccoon"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_gravity="center|center_horizontal"
        android:elevation="1dp"
        android:src="@drawable/image_raccoon_1" />

    <ImageView
        android:id="@+id/iv_bear"
        android:layout_width="wrap_content"
        android:layout_marginTop="570dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="250dp"
        android:elevation="1dp"
        android:src="@drawable/image_bear_1"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/container_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="190dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_tree2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layoutAnimation="@anim/tree_fall_down"
            android:src="@drawable/image_baulk" />

        <ImageView
            android:id="@+id/iv_tree3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layoutAnimation="@anim/tree_fall_down"
            android:src="@drawable/image_baulk" />

        <ImageView
            android:id="@+id/iv_tree4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layoutAnimation="@anim/tree_fall_down"
            android:src="@drawable/image_baulk" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/tv_score"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_number_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:text="15" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_pause"
        android:layout_width="64dp"
        android:layout_height="46dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="70dp"
        android:src="@drawable/image_button_pause" />

    <ImageView
        android:id="@+id/iv_menu"
        android:layout_width="64dp"
        android:layout_height="46dp"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/image_button_menu" />

</FrameLayout>